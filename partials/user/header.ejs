        /* Isolate navbar styles within .lune-navbar scope */
        .lune-navbar {
            font-family: 'Montserrat', sans-serif !important;
            background-color: #e2dbd7 !important;
        }

        .lune-navbar .navbar {
            background-color: rgba(255, 255, 255, 0.95) !important;
            padding: 1rem 2rem !important;
            transition: all 0.3s ease !important;
            box-shadow: 0 2px 15px rgba(0, 0, 0, 0.03) !important;
        }

        .lune-navbar .navbar.sticky {
            padding: 0.7rem 2rem !important;
        }

        .lune-navbar .navbar-brand {
            font-family: 'Playfair Display', serif !important;
            font-weight: 500 !important;
            font-size: 1.5rem !important;
            letter-spacing: 1.5px !important;
            margin-right: 3rem !important;
            color: #0a0a0a !important;
        }

        .lune-navbar .navbar-nav {
            margin-left: auto !important;
        }

        .lune-navbar .nav-item {
            margin: 0 0.6rem !important;
        }

        .lune-navbar .nav-link {
            font-family: 'Montserrat', sans-serif !important;
            font-weight: 400 !important;
            letter-spacing: 1.2px !important;
            text-transform: uppercase !important;
            font-size: 0.8rem !important;
            color: #3d3a3a !important;
            padding: 0.5rem 0.2rem !important;
            position: relative !important;
            transition: all 0.3s ease !important;
        }

        .lune-navbar .nav-link:hover {
            color: #000 !important;
        }

        .lune-navbar .nav-link:after {
            content: '' !important;
            position: absolute !important;
            width: 0 !important;
            height: 1px !important;
            bottom: 0 !important;
            left: 0 !important;
            background-color: #333 !important;
            transition: width 0.3s ease !important;
        }

        .lune-navbar .nav-link:hover:after {
            width: 100% !important;
        }

        .lune-navbar .navbar-toggler {
            border: none !important;
            padding: 0 !important;
            outline: none !important;
            box-shadow: none !important;
            z-index: 1050 !important;
        }

        .lune-navbar .navbar-toggler:focus {
            box-shadow: none !important;
        }

        .lune-navbar .hamburger {
            width: 24px !important;
            height: 18px !important;
            position: relative !important;
            cursor: pointer !important;
        }

        .lune-navbar .hamburger span {
            display: block !important;
            position: absolute !important;
            height: 1px !important;
            width: 100% !important;
            background: #333 !important;
            border-radius: 1px !important;
            opacity: 1 !important;
            left: 0 !important;
            transform: rotate(0deg) !important;
            transition: .25s ease-in-out !important;
        }

        .lune-navbar .hamburger span:nth-child(1) {
            top: 0px !important;
        }

        .lune-navbar .hamburger span:nth-child(2) {
            top: 8px !important;
        }

        .lune-navbar .hamburger span:nth-child(3) {
            top: 16px !important;
        }

        .lune-navbar .navbar-toggler:not(.collapsed) .hamburger span:nth-child(1) {
            top: 8px !important;
            transform: rotate(135deg) !important;
        }

        .lune-navbar .navbar-toggler:not(.collapsed) .hamburger span:nth-child(2) {
            opacity: 0 !important;
            left: -60px !important;
        }

        .lune-navbar .navbar-toggler:not(.collapsed) .hamburger span:nth-child(3) {
            top: 8px !important;
            transform: rotate(-135deg) !important;
        }

        .lune-navbar .navbar-collapse {
            transition: all 0.4s ease !important;
        }

        .lune-navbar .navbar-collapse.collapsing,
        .lune-navbar .navbar-collapse.show {
            background-color: rgba(255, 255, 255, 0.98) !important;
        }

        /* Moon icon style */
        .lune-navbar .moon-icon {
            height: 18px !important;
            margin-right: 8px !important;
            vertical-align: -2px !important;
        }

        /* Icons for nav items */
        .lune-navbar .nav-icon {
            margin-right: 5px !important;
            font-size: 0.9rem !important;
        }

        /* Active nav link */
        .lune-navbar .nav-link.active {
            color: #000 !important;
            font-weight: 600 !important;
        }

        /* Media query for collapsed navbar */
        @media (max-width: 992px) {
            .lune-navbar .navbar-collapse {
                padding: 1.5rem 0 !important;
            }

            .lune-navbar .nav-item {
                margin: 0.5rem 0 !important;
                text-align: center !important;
            }

            .lune-navbar .nav-link {
                padding: 0.5rem !important;
                font-size: 0.9rem !important;
            }

            .lune-navbar .nav-link:after {
                display: none !important;
            }
        }

        /* Media query for mobile devices */
        @media (max-width: 767px) {
            .lune-navbar .navbar {
                padding: 0.7rem 1rem !important;
            }

            .lune-navbar .navbar.sticky {
                padding: 0.7rem 1rem !important;
            }

            .lune-navbar .container {
                position: relative !important;
                padding-left: 10px !important;
                padding-right: 10px !important;
            }

            .lune-navbar .navbar-brand {
                font-size: 1.2rem !important;
            }

            .lune-navbar .navbar-toggler {
                position: relative !important;
                right: 0 !important;
                top: 0 !important;
                transform: none !important;
            }

            .lune-navbar .navbar-collapse {
                margin-top: 1rem !important;
                position: absolute !important;
                width: 100% !important;
                left: 0 !important;
                top: 100% !important;
                z-index: 1000 !important;
                padding: 0 1rem !important;
            }
        }
    </style>
