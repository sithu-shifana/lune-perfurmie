    <style>
        * {
            text-decoration: none;
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        html, body {
            height: 100%;
            font-family: Arial, sans-serif;
        }
        body {
            background-color: rgb(31, 35, 32);
            color: #fff;
        }
        .navbar {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 60px;
            background: linear-gradient(45deg, rgba(44, 57, 48, 1), rgba(50, 50, 50, 0.9));
            display: flex;
            align-items: center;
            padding: 0 20px;
            z-index: 999;
        }
        .navbar-brand {
            display: flex;
            align-items: center;
            gap: 10px;
            text-decoration: none;
            color: #fff;
            font-family: 'Playfair Display', serif;
        }
        #theme-toggle {
            margin-left: auto;
            padding: 8px 12px;
            border: none;
            background-color: #666;
            color: #fff;
            cursor: pointer;
            border-radius: 4px;
            font-size: 14px;
        }
        .sidebar {
            position: fixed;
            top: 60px;
            left: 0;
            width: 200px;
            height: calc(100% - 60px);
            background: #222c25;
            overflow-y: auto;
            padding-top: 20px;
        }
        .sidebar ul {
            list-style: none;
            padding: 0;
        }
        .sidebar ul li {
            text-align: left;
            padding: 5px 0;
        }
        .sidebar-btn {
            display: block;
            width: 100%;
            background: transparent;
            border: none;
            color: #fff;
            font-size: 14px;
            padding: 12px;
            text-align: left;
            cursor: pointer;
            transition: background 0.3s, transform 0.1s;
            border-radius: 5px;
            outline: none;
            text-decoration: none;
        }
        .sidebar-btn:hover {
            background-color: rgba(230, 230, 232, 0.6);
        }
        .sidebar-btn:active {
            background-color: rgba(163, 158, 164, 0.9);
            transform: scale(0.98);
        }
        .sidebar-btn.active {
            background-color: rgba(187, 184, 188, 0.6);
        }
        .dashboard-content {
            margin-left: 200px;
            margin-top: 60px;
            padding: 20px;
            min-height: calc(100vh - 60px);
            background-color: rgb(31, 35, 32);
            transition: background-color 0.3s;
        }
        .content-title{
            color: white;
        }
    </style>
</head>
<body>
    <header class="navbar">
        <a class="navbar-brand" href="#">
            <svg class="moon-icon" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z" fill="none" stroke="currentColor" stroke-width="1" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
            LUNE PERFUMERIE
        </a>
    </header>
    <aside class="sidebar" id="sidebar">
        <ul>
            <li><a class="sidebar-btn" href="/admin/dashboard">Dashboard</a></li>
            <li><a class="sidebar-btn" href="/admin/customerManagement">Users</a></li>
            <li><a class="sidebar-btn" href="/admin/orderManagement">Orders</a></li>
            <li><a class="sidebar-btn" href="/admin/categoryManagement">Category</a></li>
            <li><a class="sidebar-btn" href="/admin/brandManagement">Brands</a></li>
            <li><a class="sidebar-btn" href="/admin/productManagement">Products</a></li>
            <li><a class="sidebar-btn" href="/admin/offerManagement">Offers</a></li>
            <li><a class="sidebar-btn" href="/admin/couponManagement">Coupons</a></li>
            <li><a class="sidebar-btn" href="/admin/sales-report/generate">Sales Report</a></li>
            <!-- <% if (admin && admin.role === "mainadmin") { %>
                <li><a class="sidebar-btn" href="/manage-assistants">Manage Assistant Admins</a></li>
            <% } %> -->
            <li><a class="sidebar-btn" href="/admin/logout">Log Out</a></li>
        </ul>
        <script>
            document.addEventListener("DOMContentLoaded", function () {
                let currentPath = window.location.pathname;
                let sidebarButtons = document.querySelectorAll(".sidebar-btn");
                sidebarButtons.forEach(button => {
                    if (button.getAttribute("href") === currentPath) {
                        button.classList.add("active");
                    }
                });
            });
        </script>
    </aside>
</body>
</html>