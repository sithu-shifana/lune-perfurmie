        // Intersection Observer for scroll animations
        const observerOptions = {
            threshold: 0.15,
            rootMargin: '0px 0px -100px 0px'
        };

        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    setTimeout(() => {
                        entry.target.classList.add('animate');
                    }, 100);
                }
            });
        }, observerOptions);

        // Observe all brand items
        document.querySelectorAll('.brand-item').forEach(item => {
            observer.observe(item);
        });

        // Smooth scroll behavior
        document.documentElement.style.scrollBehavior = 'smooth';

        // Enhanced image interactions
        document.querySelectorAll('.brand-images img').forEach(img => {
            img.addEventListener('mouseenter', function() {
                this.style.transform = 'scale(1.05)';
                this.style.filter = 'brightness(1.05) contrast(1.1) saturate(1.1)';
            });
            
            img.addEventListener('mouseleave', function() {
                this.style.transform = 'scale(1)';
                this.style.filter = 'brightness(0.95) contrast(1.05)';
            });
        });

        // Subtle parallax effect
        let ticking = false;
        
        function updateParallax() {
            const scrolled = window.pageYOffset;
            const brandItems = document.querySelectorAll('.brand-item');
            
            brandItems.forEach((item, index) => {
                const speed = 0.02 * (index % 2 === 0 ? 1 : -1);
                const yPos = scrolled * speed;
                item.style.transform = `translateY(${yPos}px)`;
            });
            
            ticking = false;
        }

        window.addEventListener('scroll', () => {
            if (!ticking) {
                requestAnimationFrame(updateParallax);
                ticking = true;
            }
        });

class VideoCarousel {
            constructor() {
                this.videos = document.querySelectorAll('.video-container video');
                this.texts = document.querySelectorAll('.text-container .text-item');
                this.indicators = document.querySelectorAll('.indicator');
                this.progressFill = document.querySelector('.progress-fill');
                this.currentIndex = 0;
                this.isTransitioning = false;
                this.autoSlideInterval = null;
                this.slideDuration = 6000; // 6 seconds per slide
                this.progressInterval = null;
                
                this.init();
            }
            
            init() {
                // Set up video event listeners
                this.videos.forEach((video, index) => {
                    video.addEventListener('loadeddata', () => {
                        if (index === 0) {
                            this.showSlide(0);
                            this.startAutoSlide();
                        }
                    });
                });
                
                // Set up indicator click listeners
                this.indicators.forEach((indicator, index) => {
                    indicator.addEventListener('click', () => {
                        if (index !== this.currentIndex && !this.isTransitioning) {
                            this.showSlide(index);
                            this.resetAutoSlide();
                        }
                    });
                });
                
                // Pause auto-slide on hover
                const container = document.querySelector('.video-carousel');
                container.addEventListener('mouseenter', () => {
                    this.pauseAutoSlide();
                });
                
                container.addEventListener('mouseleave', () => {
                    this.startAutoSlide();
                });
                
                // Start with first video
                this.showSlide(0);
                this.startAutoSlide();
            }
            
            showSlide(index) {
                if (this.isTransitioning) return;
                
                this.isTransitioning = true;
                
                // Update videos
                this.videos.forEach((video, i) => {
                    video.classList.remove('active');
                    video.pause();
                    
                    if (i === index) {
                        video.classList.add('active');
                        video.currentTime = 0;
                        setTimeout(() => {
                            video.play().catch(e => console.log('Video play error:', e));
                        }, 400);
                    }
                });
                
                // Update texts
                this.texts.forEach((text, i) => {
                    text.classList.remove('active');
                    if (i === index) {
                        text.classList.add('active');
                    }
                });
                
                // Update indicators
                this.indicators.forEach((indicator, i) => {
                    indicator.classList.toggle('active', i === index);
                });
                
                this.currentIndex = index;
                this.startProgressBar();
                
                // Allow transitions after animation completes
                setTimeout(() => {
                    this.isTransitioning = false;
                }, 800);
            }
            
            startProgressBar() {
                this.progressFill.style.width = '0%';
                
                if (this.progressInterval) {
                    clearInterval(this.progressInterval);
                }
                
                let progress = 0;
                const increment = 100 / (this.slideDuration / 50);
                
                this.progressInterval = setInterval(() => {
                    progress += increment;
                    this.progressFill.style.width = Math.min(progress, 100) + '%';
                    
                    if (progress >= 100) {
                        clearInterval(this.progressInterval);
                    }
                }, 50);
            }
            
            startAutoSlide() {
                this.pauseAutoSlide();
                this.autoSlideInterval = setInterval(() => {
                    this.nextSlide();
                }, this.slideDuration);
            }
            
            pauseAutoSlide() {
                if (this.autoSlideInterval) {
                    clearInterval(this.autoSlideInterval);
                    this.autoSlideInterval = null;
                }
            }
            
            resetAutoSlide() {
                this.startAutoSlide();
            }
            
            nextSlide() {
                const nextIndex = (this.currentIndex + 1) % this.videos.length;
                this.showSlide(nextIndex);
            }
            
            prevSlide() {
                const prevIndex = (this.currentIndex - 1 + this.videos.length) % this.videos.length;
                this.showSlide(prevIndex);
                this.resetAutoSlide();
            }
        }

