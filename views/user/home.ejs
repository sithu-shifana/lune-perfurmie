      <div class="newly-arrived-grid">
        <% newlyArrivedProducts.forEach((product, index) => { %>
          <div class="product-card" data-index="<%= index %>">
            <a href="/product-show/<%= product._id %>" style="text-decoration: none; color: inherit;">
              <!-- New Badge -->
              <div class="new-badge">New</div>
              
              <!-- Product Image -->
              <img src="<%= product.images.length ? product.images[0].url : '/images/placeholder.png' %>" alt="<%= product.productName %>">
              
              <!-- Product Name -->
              <h3><%= product.productName %></h3>
              
              <!-- Brand Name -->
              <p class="brand-name">Brand: <%= product.brand.name %></p>

  <% if (product.variant) { %>
                  <div class="price-container">
                    <% if (product.variant.hasOffer && product.variant.offerPrice < product.variant.originalPrice) { %>
                      <span class="offer-price">₹<%= product.variant.offerPrice %></span>
                      <span class="original-price">₹<%= product.variant.originalPrice.toFixed(0) %></span>
                      <span class="discount">
                        <% if (product.variant.discountType === 'percentage') { %>
                          <%= product.variant.discountValue %>% OFF
                        <% } else if (product.variant.discountType === 'flat') { %>
                          ₹<%= product.variant.discountValue %> OFF
                        <% } %>
                      </span>
                    <% } else { %>
                      <span class="offer-price">₹<%= product.variant.originalPrice %></span>
                    <% } %>
                  </div>
                <% } else { %>
                  <div class="price-container">
