            <div class="price-display">
              <div class="current-price">â‚¹<%= item.offerPrice.toLocaleString() %> each</div>
              <% if (item.hasOffer) { %>
                <div class="original-price">â‚¹<%= item.originalPrice.toLocaleString() %></div>
              <% } %>
            </div>
