          <% if (selectedAddressId) { 
               const selected = addresses.find(addr => addr._id.toString() === selectedAddressId.toString());
          %>
            <%= selected.name %>, <%= selected.city %>
          <% } else { %>
            Choose your delivery address
          <% } %>
